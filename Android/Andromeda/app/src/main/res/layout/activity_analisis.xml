<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/title" />
            <include
                layout="@layout/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/title_blue_bar"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="GotoRues">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_white_side"
                    android:layout_gravity=""
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RUES"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/dotRues"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dot_orange" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/title_blue_bar"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:clickable="true"
                android:onClick="GotoProcuraduria">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_white_side"
                    android:layout_gravity=""
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PROCURADURÍA"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/dotProcuraduria"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dot_orange" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/title_blue_bar"
                android:orientation="horizontal"
                android:paddingTop="5dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_white_side"
                    android:layout_gravity=""
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SECOP"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/dotSecop"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dot_orange" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/title_blue_bar"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:clickable="true"
                android:onClick="GotoExternas">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_white_side"
                    android:layout_gravity=""
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FUENTES EXTERNAS"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
